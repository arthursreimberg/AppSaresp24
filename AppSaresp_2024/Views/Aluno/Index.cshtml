@model IEnumerable<AppSaresp_2024.Models.Aluno>

@{
    ViewData["Title"] = "Index";
}

<h1>Alunos</h1>

<p> <a class=" ="btn btn-primary" asp-action="CadastrarAluno" asp-controller="Aluno">Cadastrar</a></p>

<div class="table-responsive">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(model => model.RA)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.NomeAluno)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Email)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Telefone)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Serie)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Turma)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.DataNascAluno)</th>
                <th scope="col">Ação</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Aluno aluno in Model) 
            {
                 <tr>
                     <td>@aluno.RA</td>
                     <td>@aluno.NomeAluno</td>
                     <td>@aluno.Email</td>
                     <td>@aluno.Telefone</td>
                     <td>@aluno.Serie</td>
                     <td>@aluno.Turma</td>
                     <td>@aluno.DataNascAluno.ToString("dd/MM/yyyy")</td>
                     <td>
                         <button type="button" class="btn btn-danger">
                            @Html.ActionLink("Excluir", "ExcluirAluno", new { id = aluno.RA }, new { onclick = "return confirm ('Deseja mesmo apagar o registro?');"})
                         </button>
                     </td>
                 </tr>
            }
        </tbody>
    </table>
</div>